{
  "name": "ripgrep-js",
  "version": "3.0.0",
  "description": "Node.js wrapper around Ripgrep",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "test": "jest",
    "postinstall": "husky install",
    "prepublishOnly": "yarn build && pinst --disable",
    "postpublish": "pinst --enable",
    "release": "standard-version"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "url": "git@github.com:alexlafroscia/ripgrep-js.git",
    "type": "git"
  },
  "author": "Alex LaFroscia <alex@lafroscia.com>",
  "license": "MIT",
  "dependencies": {
    "debug": "^4.3.1"
  },
  "devDependencies": {
    "@movable/eslint-config": "^0.6.9",
    "@movable/eslint-config-node": "^1.0.0",
    "@movable/eslint-config-typescript": "^1.0.0",
    "@movable/prettier-config": "^0.3.6",
    "@tsconfig/node14": "^1.0.0",
    "@types/debug": "^4.1.5",
    "@types/jest": "^27.0.1",
    "@types/node": "^18.8.4",
    "file-fixture-factory": "^1.0.0",
    "husky": "^7.0.1",
    "jest": "^26.6.3",
    "lint-staged": "^12.1.2",
    "pinst": "^2.1.4",
    "standard-version": "^9.1.0",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5"
  },
  "volta": {
    "node": "14.15.5",
    "yarn": "1.22.10"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.{md,json,yml}": "prettier --write"
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "prettier --write CHANGELOG.md"
    }
  }
}
